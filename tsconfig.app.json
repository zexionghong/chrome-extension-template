{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": ["src/**/*", "src/**/*.vue", "types/**/*.d.ts"],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@popup/*": ["./src/pages/popup/*"],
			"@side-panel/*": ["./src/pages/side-panel/*"]
		},
		"types": ["chrome"]
	}
}
